<h1>All Traders</h1>

<p>
  <%= link_to 'âž• Add New Trader', new_admin_user_path, class: 'button' %>
</p>

<table>
  <tr>
    <th>Email</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.is_pending ? 'Pending' : 'Approved' %></td>
      <td>
        <%= link_to 'Show', admin_user_path(user) %> |
        <%= link_to 'Edit', edit_admin_user_path(user) %> |
        <% if user.is_pending %>
          <%= link_to 'Approve', approve_admin_user_path(user), method: :patch, data: { confirm: "Are you sure?" } %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
