<h1 class="form-heading"><i class="fas fa-user-edit"></i> Edit Trader</h1>

<div class="form-container">
  <%= form_with(model: [:admin, @user], local: true, class: "styled-form") do |form| %>
    <% if @user.errors.any? %>
      <div class="error-explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this trader from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :balance %>
      <%= form.number_field :balance, step: 0.01, class: "form-control" %>
    </div>

    <div class="form-group checkbox-group">
      <%= form.check_box :is_pending, class: "form-checkbox" %>
      <%= form.label :is_pending, "Pending" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Update Trader", class: "btn-submit" %>
      <%= link_to "Back to Traders", admin_users_path, class: "btn-back" %>
    </div>
  <% end %>
</div>
