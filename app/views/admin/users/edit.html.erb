<h1>Edit Trader</h1>

<%= form_with(model: [:admin, @user], local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this trader from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :balance %><br>
    <%= form.number_field :balance, step: 0.01 %>
  </div>

  <div>
    <%= form.label :is_pending %><br>
    <%= form.check_box :is_pending %>
    <%= form.label :is_pending, "Pending" %>
  </div>

  <div>
    <%= form.submit "Update Trader" %>
  </div>
<% end %>

<%= link_to "Back to Traders", admin_users_path %>
