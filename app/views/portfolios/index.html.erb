<% if user_signed_in? %>
<h2>Hi <%= current_user.email %></h2>

<% if current_user.is_admin? %>
  <%= link_to "Go to Admin Dashboard", admin_users_path %>
<% else %>
  <h2> Welcome, traders! In this app, we’re here to help you get richer, one stock at a time! Let’s stock, stock, stock! 😄📈 </h2>
  <%= link_to "Get started", trader_portfolios_path %>
<% end %>

<% else %>
<div class="welcome-banner text-center shadow">
  <h1>
    <span class="emoji">🔐</span>
    <span class="text">Welcome! Please Sign In</span>
  </h1> <br>
  <%= image_tag "gif.gif", alt: "Animated Welcome", class: "welcome-image" %>
  <p class="gif-caption">Explore the stock world one frame at a time! 📊</p>
</div>

<% end %>
